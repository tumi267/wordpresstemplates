{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,	

    "styles": {
      "color": {
        "background": "rgba(255, 255, 255, 1)"
      }
    },
    "settings": {
      "border": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      },
      "color": {
        "background": true,
        "custom": true,
        "customDuotone": true,
        "customGradient": true,
        "defaultDuotone": true,
        "defaultGradients": true,
        "defaultPalette": true,
        "duotone": [],
        "gradients": [],
        "link": true,
        "palette": [],
        "text": true
      },
      "custom": {
       
      },
      "dimensions": {
        "minHeight": true
      },
      "layout": {
        "contentSize": "",
			  "wideSize": ""
      },
      "position": {
        "sticky": true
      },
      "shadow": {
        "defaultPresets": true,
			"presets": [
				{
					"name": "Natural",
					"slug": "natural",
					"shadow": "6px 6px 9px rgba(0, 0, 0, 0.2)"
				},
				{
					"name": "Deep",
					"slug": "deep",
					"shadow": "12px 12px 50px rgba(0, 0, 0, 0.4)"
				},
				{
					"name": "Sharp",
					"slug": "sharp",
					"shadow": "6px 6px 0px rgba(0, 0, 0, 0.2)"
				},
				{
					"name": "Outlined",
					"slug": "outlined",
					"shadow": "6px 6px 0px -3px rgba(255, 255, 255, 1), 6px 6px rgba(0, 0, 0, 1)"
				},
				{
					"name": "Crisp",
					"slug": "crisp",
					"shadow": "6px 6px 0px rgba(0, 0, 0, 1)"
				}
			]
      },
      "spacing": {
        "blockGap":true,
        "margin":true,
        "padding":true,
        
        "customSpacingSize":true,
        "units": [ "px", "em", "rem", "vh", "vw", "%" ]
      },
      "typography": {
        "fluid": true,
        "customFontSize": true,
			  "dropCap": true,
			  "fontStyle": true,
			  "fontWeight": true,
			  "letterSpacing": true,
			  "lineHeight": true,
			  "textColumns": true,
			  "textDecoration": true,
			  "textTransform": true,
			  "writingMode": true,
        "fontFamilies": []
      },
      "useRootPaddingAwareAlignments": false,
      "blocks": {
        "core/cover": {
          "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
          }
        },
        "core/image": {
          "lightbox": {
            "allowEditing": true
          }
        }
  
      }
    },
    "patterns":["fullscreen-cover-image-gallery",
    "hero-banner-with-overlap-images",
    "mixed-shape-gallery"],
    
    "templateParts": [
      {
        "name": "header",
        "title": "Header",
        "area": "header"
      },
      {
        "name": "nav",
        "title": "nav",
        "area": "general"
      },
      {
        "name":"footer",
        "title":"footer",
        "area":"footer"
      }
    ]
  }