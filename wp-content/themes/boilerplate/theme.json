{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
      "appearanceTools": true,
      "color": {
        "custom": true,
        "customGradient": true,
        "defaultPalette": true,
        "palette": [],
        "gradients": []
      },
      "spacing": {
        "blockGap": true,
        "margin": true,
        "padding": true,
        "units": ["px", "em", "rem", "%", "vh", "vw"]
      },
      "typography": {
        "customFontSize": true,
        "customLineHeight": true,
        "dropCap": true,
        "fontFamilies": [],
        "fontSizes": [],
        "textDecoration": true,
        "textTransform": true
      },
      "layout": {
        "contentSize": "800px",
        "wideSize": "1200px"
      },
      "blocks": {}
    },
    "styles": {
      "typography": {
        "fontSize": "1rem",
        "lineHeight": "1.6"
      },
      "spacing": {
        "padding": "0",
        "margin": "0"
      }
    }
  }
  